{
	"manifest_version": 2,
	"name": "VoiceBox",
	"version": "0.2.0",
	"description": "Voice recognition control for your Gmail inbox!",

	"page_action": {},
  	"content_scripts": [
    {
        "matches": [
            "https://mail.google.com/*"
        ],
        "js": [
            "js/content.js"
        ],
        "run_at": "document_start"
    }
    ],

	"permissions": ["http://*/*", "https://*/*"]
}
